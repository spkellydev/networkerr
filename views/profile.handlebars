<h2>{{title}}</h2>


<p>{{body.description}}</p>
{{#if user}}
<form method="post" action="/users/profile/{{user.id}}">
   <div class="form-group">
    <label>Name</label>
    <input 
        type="text" 
        class="form-control" 
        placeholder="Name" 
        name="name" 
        value="{{user.name}}">
  </div>
  <div class="form-group">
    <label>Username</label>
    <input 
        type="text" 
        class="form-control" 
        placeholder="Username" 
        name="username"
        value="{{user.username}}">
  </div>
   <div class="form-group">
    <label>Email</label>
    <input 
        type="email" 
        class="form-control" 
        placeholder="Email" 
        name="email"
        value="{{user.email}}">
  </div>
  <button type="submit" class="btn btn-default">Submit</button>
</form>
{{else}}
<h3>Name: <small>{{User.name}}</small></h3>
<h3>Username: <small>{{User.username}}</small></h3>
<h3>Email: <small>{{User.email}}</small></h3>
{{/if}}

